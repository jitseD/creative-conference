---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home";
---

<style>
	h1 {
		display: none;
	}
	.header{
		block-size: 95vh;
		background-image: linear-gradient(
				to right,
				rgba(255, 255, 255, 0.8),
				rgba(255, 255, 255, 0.2)
			),
			url(../assets/img/origami-background.jpeg);
		background-size: cover;
		display: grid;
		align-items: center;
		padding: var(--s-3xl);
	}
	.header__container {
		display: grid;
		grid-template-columns: 10rem 30rem 1fr;
		grid-template-rows: repeat(4, min-content);
		gap: var(--s-m);
		color: var(--c-black);
		padding-block-end: var(--s-3xl);
	}
	.header__title {
		grid-column: 1/3;
		grid-row: 2;
		font-size: var(--f-xl);
		line-height: 1.2;
		display: flex;
		flex-direction: column;
		font-weight: 500;
	}
	.header__title strong{
		font-size: var(--f-3xl);
	}
	.header__description {
		grid-column: 1/3;
		grid-row: 3;
		inline-size: 25rem
	}
	.header__date {
		grid-column: 1;
		grid-row: 1;
	}
	.header__location {
		grid-column: 2;
		grid-row: 1;
	}
	.header__button {
		grid-row: 4;
		color: var(--c-black);
	}
	.header__button:nth-of-type(1) {
		grid-column: 1;
	}
	.header__button:nth-of-type(2) {
		grid-column: 2;
	}
</style>

<BaseLayout pageTitle={pageTitle}>
	<h1>Home</h1>
	<section class="header">
		<div class="header__container">
			<h2 class="header__title">
				<strong>FoldCon:</strong> Unveiling Paper's Folded Wonders
			</h2>
			<p class="header__description">
				Discover Tokyo's origami legacy and immerse yourself in workshops
				and masterpieces at FoldCon
			</p>
			<p class="header__date">10th - 12th nov, 2023</p>
			<p class="header__location">Tokyo, Japan</p>
			<a class="header__button" href="">sunscribe</a>
			<a class="header__button" href="">learn more</a>
		</div>
	</section>
</BaseLayout>
